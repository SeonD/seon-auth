extends layout

block content
  .container
    form.form-signin(method='post', action='/auth/login', role='form')
      h2.form-signin-heading Login
      .form-group
        .div Enter your username and password to use this service
      .form-group
        input(type='text', name='email', value='')
        input(type='password', name='password', value='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Authorise
        a(href='/auth/google') Login with Google
